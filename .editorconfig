root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,csx}]
dotnet_sort_system_directives_first = true
dotnet_style_namespace_match_folder = true

[*.{xml,csproj,props,targets,slnx}]
indent_size = 2
